@model ResetPasswordViewModel

@{
    this.ViewData["Title"] = T["Reset password"];
}
<h1>@(T["Reset your password"])</h1>
<hr/>
<div class="row">
    <div class="col-md-4">
        <form method="post" autocomplete="false">
            <div asp-validation-summary="All" class="text-danger"></div>
            @*<input autocomplete="false" name="hidden" type="text" class="d-none">*@
            <input asp-for="Code" type="hidden" />

            <div class="form-group">
                <label asp-for="Input.Email">@(T["Email"])</label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.Password">@(T["Password"])</label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.ConfirmPassword">@(T["ConfirmPassword"])</label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">@(T["Reset password"])</button>

        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}