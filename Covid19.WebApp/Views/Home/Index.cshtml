                        <p>
                            <a class="btn btn-lg btn-primary" href="#" role="button">@T["Learn more"]</a>

                        </p>
                    </div>
                    <div class="carousel-image wow zoomIn">
                        <img src="~/landing/laptop.png" />

                    </div>
                </div>
                <!-- Set background for slide in css -->
                <div class="header-back one"></div>

            </div>
            <div class="item">
